@model WebMoHinh.Models.Category

@{   

        ViewData["Title"] = "Delete";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="delete-form">
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="CategoryId" />
                    <p>Bạn có chắc chắn muốn xóa @Model.CategoryName</p>
                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>     
        </div>
    </div>
}
else
{
    <h2 style="color: red; text-align: center"><strong>Quyền Truy Cập Không Hợp Lệ</strong></h2>
    <div class="text-center mt-4">
        <a class="btn btn-lg btn-secondary mr-2" href="javascript:history.go(-1)">Trở Về</a>
    </div>
}


